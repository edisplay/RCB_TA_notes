<div class="container">
	<div class="row"> 
		<div class="col-xs-12 text-center" id="top-bar">
			<img src="../../assets/img/hex_pic.png" class="" alt="" />
			<h1> Burgers Devoured! </h1>
		</div>
		<div class="col-xs-6 text-center" class="task">
			<div class="row"> 	
			  {{#each col}}
			  	{{#unless this.Done}}
				<div class="col-xs-9 text-center">
					<pre>{{this.ID}}. {{this.burger_name}}
					</pre>
				  		<!-- {{this.Date}} -->
				</div>
				<div class="col-xs-3 text-center">
					<form method="POST" action="/mySubmit?_method=PUT" class="button-size">
						<input input type="hidden" type="text" name="todo_id" value={{this.ID}}><br>
						<button type="submit" class="btn btn-default">Done!</button>
					</form>
				</div>
				{{/unless}}
			  {{/each}}
			</div>
		</div>
		<div class="col-xs-6 text-center" class="task">
			  {{#each col}}
			  	{{#if this.Done}}
			  		<input class="form-control" type="text" placeholder="{{this.ID}} . {{this.burger_name}}" readonly>
				{{/if}}
			  {{/each}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row"> 
		<div class="col-xs-12 text-center enter_section">
			<form action="/mySubmit" method="POST">
				<textarea class="form-control" type="text" name="todo" value="" id="enter_text"></textarea>
				<button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
			</form>
			<p>Enter your task and Click the "Submit" button.</p>
		</div>
	</div>
</div>


